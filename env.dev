# FoundMe Development Environment Variables
# Copy this file to .env and update values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
APP_NAME=FoundMe Platform
APP_VERSION=1.0.0
APP_PORT=3000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:5928
REACT_APP_WS_URL=ws://localhost:4857
REACT_APP_ENVIRONMENT=development

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================
API_GATEWAY_PORT=3000
API_GATEWAY_CORS_ORIGIN=http://localhost:8472
API_GATEWAY_RATE_LIMIT_WINDOW_MS=900000
API_GATEWAY_RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# AUTHENTICATION SERVICE
# =============================================================================
AUTH_SERVICE_PORT=3000
JWT_SECRET=dev_jwt_secret_key_678_secure_development_only
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=dev_session_secret_123_secure_development_only

# =============================================================================
# DISCOVERY SERVICE (OSINT)
# =============================================================================
DISCOVERY_SERVICE_PORT=3000
HIBP_API_KEY=your_haveibeenpwned_api_key_here
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage
DISCOVERY_TIMEOUT_MS=30000
MAX_CONCURRENT_SCANS=5

# =============================================================================
# RISK ASSESSMENT SERVICE
# =============================================================================
RISK_SERVICE_PORT=3000
ML_MODEL_PATH=/app/models
RISK_SCORE_THRESHOLD_HIGH=80
RISK_SCORE_THRESHOLD_MEDIUM=50
RISK_SCORE_THRESHOLD_LOW=20

# =============================================================================
# SUBSCRIPTION SERVICE
# =============================================================================
SUBSCRIPTION_SERVICE_PORT=3000
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_CURRENCY=usd
SUBSCRIPTION_TRIAL_DAYS=14

# =============================================================================
# NOTIFICATION SERVICE
# =============================================================================
NOTIFICATION_SERVICE_PORT=3000
NOTIFICATION_QUEUE_NAME=notifications
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY_MS=5000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_SECURE=false
EMAIL_FROM=noreply@foundme.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=7942
POSTGRES_DB=foundme_dev
POSTGRES_USER=foundme_user
POSTGRES_PASSWORD=dev_password_secure_123
POSTGRES_URL=postgresql://foundme_user:dev_password_secure_123@localhost:7942/foundme_dev

# MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=foundme_dev
MONGODB_USER=foundme_admin
MONGODB_PASSWORD=dev_mongo_secure_456
MONGODB_URL=mongodb://foundme_admin:dev_mongo_secure_456@localhost:27017/foundme_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password_123
REDIS_DB=0
REDIS_URL=redis://:dev_redis_password_123@localhost:6379

# =============================================================================
# MESSAGE QUEUE CONFIGURATION
# =============================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=foundme_user
RABBITMQ_PASS=dev_rabbit_secure_789
RABBITMQ_VHOST=foundme_dev
RABBITMQ_URL=amqp://foundme_user:dev_rabbit_secure_789@localhost:5672

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=dev_grafana_secure_012
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:8472
CORS_CREDENTIALS=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
REQUEST_SIZE_LIMIT=10mb

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_CONSOLE_ENABLED=true

# =============================================================================
# EXTERNAL API KEYS (Development Only)
# =============================================================================
# HaveIBeenPwned API
HIBP_API_KEY=your_haveibeenpwned_api_key_here

# Social Media APIs (if needed)
TWITTER_API_KEY=your_twitter_api_key_here
LINKEDIN_API_KEY=your_linkedin_api_key_here
FACEBOOK_API_KEY=your_facebook_api_key_here

# Data Broker APIs
SPOKEO_API_KEY=your_spokeo_api_key_here
PIPL_API_KEY=your_pipl_api_key_here

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
DEBUG=foundme:*
NODE_OPTIONS=--max-old-space-size=4096
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
